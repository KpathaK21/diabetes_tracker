# Database Configuration
DB_HOST=localhost
DB_USER=your_db_username
DB_PASSWORD=your_db_password
DB_NAME=diabetes_db
DB_PORT=5432

# SendGrid API key for email verification
# Sign up at https://sendgrid.com/ and create an API key
SENDGRID_API_KEY=your_sendgrid_api_key_here

# Sender email for SendGrid (must be verified in SendGrid)
# This email must be verified in your SendGrid account
SENDER_EMAIL=your_verified_email@example.com

# Application domain for verification links
# For local development, use http://localhost:3000 or diabetesapp://verify
# For production, use your actual domain, e.g., https://diabetesapp.com
APP_DOMAIN=diabetesapp://verify

# Server port (defaults to 8443 for HTTPS)
PORT=8443

# HTTPS Configuration
# Set to "true" to run in development mode without HTTPS
DEV_MODE=true

# Path to SSL certificate and key files (required for HTTPS in production)
CERT_FILE=/path/to/cert.pem
KEY_FILE=/path/to/key.pem

# CORS Configuration
# Comma-separated list of allowed origins (domains)
# For production, specify your frontend domain(s)
# For development, you can use "*" to allow all origins
ALLOWED_ORIGINS=https://yourdomain.com